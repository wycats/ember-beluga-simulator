{
  "eslint.format.enable": false,
  "eslint.validate": [
    "javascript",
    "typescript",
    "html",
    "glimmer-js",
    "glimmer-ts",
    "json"
  ],
  "eslint.options": {
    "reportUnusedDisableDirectives": "error"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "files.associations": {
    "turbo.json": "jsonc"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[handlebars]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[glimmer-js]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[glimmer-ts]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false,
    "editor.codeActionsOnSave": {
      "source.fixAll": "always",
      "source.formatDocument": "always"
    }
  },
  "[markdown]": {
    "editor.detectIndentation": false,
    "editor.insertSpaces": false,
    "editor.tabSize": 4
  },
  // Adds Turbo and AB files to search exclude
  "files.exclude": {
    "**/coverage": true,
    "**/.turbo": true,
    "**/tmp": true,
  },
  // Inherits all values from 'files.exclude'
  // These are files we want to show in sidebar but not slow search or quick files
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/dist": true,
    "**/*.module.css.d.ts": true
  },
  // This does not inherit from 'files.exclude'
  // This impacts extensions which can use file watcher API and use a lot of RAM
  "files.watcherExclude": {
    "**/dist/**": true,
    "**/coverage/**": true,
    "**/.turbo/**": true,
    "**/node_modules/**": true,
    "**/node_modules/*/**": false,
    "**/tmp": true
  },
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "*.gts": "${capture}-style.module.css, ${capture}-style.module.css.d.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb",
    "Cargo.toml": "Cargo.lock"
  },
  "explorer.fileNesting.expand": false,
  "[ignore]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[properties]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "javascript.preferences.importModuleSpecifier": "project-relative",
  "typescript.preferences.importModuleSpecifier": "project-relative",
  "typescript.preferences.importModuleSpecifierEnding": "index",
  "javascript.preferences.importModuleSpecifierEnding": "index",
  "glint.libraryPath": "/home/ykatz/Code/Ember/glint/packages/core",
  "typescript.tsdk": "./node_modules/typescript/lib",
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
}